<div class="container">
  <h1>New game</h1>
  <div class="letters">
  <% @letters.each do |letter| %>
  <div class="element">
  <%= letter %>
  </div>
  <% end %>
  </div>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="POST">
  <input type="text" name="word">
  <input type="hidden" name="letters" value="<%= @letters%>" >
  <input type="submit" value="Play" class="btn btn-warning">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
